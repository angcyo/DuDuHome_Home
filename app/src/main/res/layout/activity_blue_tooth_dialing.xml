<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/button_back_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_dial_keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_dial_keyboard_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dial_keyboard"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_contacts_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/contacts"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:id="@+id/number_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="43dp">

            <TableRow>

                <Button
                    android:id="@+id/number_button01"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_one_selector"
                    android:tag="1" />

                <Button
                    android:id="@+id/number_button02"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_two_selector"
                    android:tag="2" />

                <Button
                    android:id="@+id/number_button03"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_three_selector"
                    android:tag="3" />

                <Button
                    android:id="@+id/well_button"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_well_selector"
                    android:tag="#" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/number_button04"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_four_selector"
                    android:tag="4" />

                <Button
                    android:id="@+id/number_button05"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_five_selector"
                    android:tag="5" />

                <Button
                    android:id="@+id/number_button06"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_six_selector"
                    android:tag="6" />

                <Button
                    android:id="@+id/number_button0"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_zero_selector"
                    android:tag="0" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/number_button07"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_seven_selector"
                    android:tag="7" />

                <Button
                    android:id="@+id/number_button08"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_eight_selector"
                    android:tag="8" />

                <Button
                    android:id="@+id/number_button09"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_nine_selector"
                    android:tag="9" />

                <Button
                    android:id="@+id/rice_button"
                    style="@style/calling_button_style"
                    android:background="@drawable/button_rice_selector"
                    android:tag="*" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="62dp"
            android:background="@drawable/button_calling_drop_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="55dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caller_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/caller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="伊娃"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/bt_dialing"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
