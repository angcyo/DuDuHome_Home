<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="40"></View>

        <LinearLayout
            android:id="@+id/vehicle_guard_btn"
            android:layout_width="140dp"
            android:layout_height="0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="180"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/vehicle_guard_icon"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:src="@drawable/vehicle_guard_normal" />

            <TextView
                android:id="@+id/text_vehicle_guard_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/vehicle_guard_ch"
                android:textColor="@color/unchecked_textColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_vehicle_guard_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.03"
                android:singleLine="true"
                android:text="@string/vehicle_guard_en"
                android:textColor="@color/unchecked_textColor"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicle_robbery_btn"
            android:layout_width="140dp"
            android:layout_height="0dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="180"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/vehicle_robbery_icon"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:src="@drawable/vehicle_robbery_clicked_icon" />

            <TextView
                android:id="@+id/text_vehicle_robbery_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/vehicle_robbery_ch"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_vehicle_robbery_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="@string/vehicle_robbery_en"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="100"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/vehicle_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_back_selector" />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/vehicle_right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>




